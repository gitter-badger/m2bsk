DEFINITION MODULE Parser;

(* Parser for Modula-2 R10 Bootstrap Kernel *)


FROM AST IMPORT AstT;


(* Return Status *)

TYPE Status = ( Success, Failure );


(* Result Summary *)

TYPE Statistics = RECORD
  lexicalWarnings,
  lexicalErrors,
  syntaxWarnings,
  syntaxErrors : CARDINAL;
END;


(* Operations *)

PROCEDURE parseDef
  ( infile : StringT; VAR stats : Statistics; VAR status : Status ) : AstT;
(* Parses .def source file, returns AST on success, NIL on failure. *)


PROCEDURE parseMod
  ( infile : StringT; VAR stats : Statistics; VAR status : Status ) : AstT;
(* Parses .mod source file, returns AST on success, NIL on failure. *)


END Parser.